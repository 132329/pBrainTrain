
@model IEnumerable<Pregunta>
@{
    ViewData["Title"] = "Home Page";
}

<div  >
    <h1 class="display-4">Preguntas Disponibles para Repasar</h1>
    <div class="headerTable">
        @foreach (var preg in Model)
        {

            <div class="form-group">
                <h3>@preg.Cuestionante</h3>
            </div>
            <div class="form-group">
                <a asp-route-id="@preg.Id" class="btn btn-info" asp-action="Detail" asp-controller="Preguntas">
                    Detalle y Respuestas
                </a>
                <a asp-route-id="@preg.Id" class="btn btn-warning" asp-action="Create" asp-controller="Preguntas">
                    Editar
                </a>
                <a asp-route-id="@preg.Id" class="btn btn-danger" asp-action="Create" asp-controller="Preguntas">
                 Eliminar
                </a>
            </div>

        }
    </div>
</div>
