    </div>

    <div class="form-group">
        <label asp-for="Choise1" class="control-label"></label>
        <input asp-for="Choise1" placeholder="ej: 5" autofocus="autofocus" class="form-control" />
        <span asp-validation-for="Choise1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Choise1IsCorrect" class="control-label"></label>
        <input asp-for="Choise1IsCorrect" type="checkbox" class="form-control" />
        <span asp-validation-for="Choise1IsCorrect"></span>
    </div>

    <div class="form-group">
        <label asp-for="Choise2" class="control-label"></label>
        <input asp-for="Choise2" placeholder="ej: 5" autofocus="autofocus" class="form-control" />
        <span asp-validation-for="Choise2"></span>
    </div>
    <div class="form-group">
        <label asp-for="Choise2IsCorrect" class="control-label"></label>
        <input asp-for="Choise2IsCorrect" type="checkbox" class="form-control" />
        <span asp-validation-for="Choise2IsCorrect"></span>
    </div>

    <div class="form-group">
        <label asp-for="Choise3" class="control-label"></label>
        <input asp-for="Choise3" placeholder="ej: 5" autofocus="autofocus" class="form-control" />
        <span asp-validation-for="Choise3"></span>
    </div>
    <div class="form-group">
        <label asp-for="Choise3IsCorrect" class="control-label"></label>
        <input asp-for="Choise3IsCorrect" type="checkbox" class="form-control" />
        <span asp-validation-for="Choise3IsCorrect"></span>
    </div>

    <div class="form-group">
        <label asp-for="Choise4" class="control-label"></label>
        <input asp-for="Choise4" placeholder="ej: 5" autofocus="autofocus" class="form-control" />
        <span asp-validation-for="Choise4"></span>
    </div>
    <div class="form-group">
        <label asp-for="Choise4IsCorrect" class="control-label"></label>
        <input asp-for="Choise4IsCorrect" type="checkbox" class="form-control" />
        <span asp-validation-for="Choise4IsCorrect"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnswerRestrospective" class="control-label"></label>
        <input asp-for="AnswerRestrospective"  autofocus="autofocus" class="form-control" />
        <span asp-validation-for="AnswerRestrospective"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image"></span>
    </div>

    <div class="form-control">
        <button class="btn btn-primary"> Guardar</button>
        <a asp-action="Index" class="btn btn-default"> Cancelar</a>
    </div>

</form>

