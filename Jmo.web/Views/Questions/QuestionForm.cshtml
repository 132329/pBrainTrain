@model  Jmo.Web.ViewModels.QuestionViewModel
@{
    ViewData["Title"] = Model.Title;
}

<h1> @Model.Title </h1>

<form asp-action="Create" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
